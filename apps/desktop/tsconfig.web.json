{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "../../packages/shared/src/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/renderer/src/*"],
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@shared/*": [
        "../../packages/shared/src/*"
      ],
      "@data-peek/shared": [
        "../../packages/shared/src/index.ts"
      ]
    }
  }
}
